        <Button x:Name="Exit" Content="Button" Margin="0,-10,-32,0" Style="{DynamicResource ExitStyle}" Height="64" VerticalAlignment="Top" Click="ExitClick" HorizontalAlignment="Right" Width="130" ToolTip="خروج"/>
